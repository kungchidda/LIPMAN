	<select id="read" resultType="com.kungchidda.domain.TitleVO">
		select a.tno, a.title, titlelikecnt, titledislikecnt, b.titleFullName as fullName, a.regdate
			from tbl_title a
			inner join
			(SELECT  tno, titleFullName from tbl_title_attach) b    
			on b.tno = a.tno
			
		where a.tno = #{tno}
	</select>
	
	<update id="update">
		update tbl_title set title =#{title} 
		where tno = #{tno}
	</update>
	
	<delete id="delete">
		delete from tbl_title where tno = #{tno}
	</delete>
	
